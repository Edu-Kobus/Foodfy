{% extends "layout.njk" %}

{% block recipeList %}
    <section>        
        <div class="food-cards">
            
            {% for item in items %}
            <div class="revenue" id = {{loop.index0}}>
                <div class="food-image">
                    <img src="{{ item.image }}" alt="{{ item.title }}">
                </div>
                
                <div class="revenue-content">
                    <h4>{{ item.title }}</h4>
                    <b>{{ item.author }}</b>
                </div>     
            </div>
            {% endfor %}
            
        </div>
    </section>
{% endblock %}